            <%= form_for @user_activity do |f| %>
            <div class="form-group">
              <%= f.label :Activity %>
              <%= f.collection_select :activity_id, Activity.order(:title),:id,:title, include_blank: true, class: 'custom-select' %>
            </div>
            <%= f.submit "Create", class: "btn btn-primary" %>
            <% end %>
