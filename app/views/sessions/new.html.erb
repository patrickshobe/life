<div class="jumbotron jumbotron-fluid align-items-center" style="background-color: #46B6FF; height: 80vh;">
  </br>
  </br>
  </br>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-sm">

      </div>
      <div class="col-10">
        <div class="card text-center" >

          <div class="card-body">
            <h5 class="card-title h3" style="color: #68767F">Login</h5>

            <%= form_tag login_path do %>
            <div class="form-group">
              <%= label_tag :username %>
              <%= text_field_tag :username, "", class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password, "", class: 'form-control' %>
            </div>
            <%= submit_tag "Log In", class: "btn btn-primary" %>
            <% end %>
            </br>
          </div>
          </br>
        </div>
      </div>
      <div class='col-sm'>
      </div>
    </div>
  </div>
</div>





